<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="aclass.com.example.garbgeapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/p1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AboutActivity"></activity>
        <activity android:name=".GarbgeActivity.BadGarbgeActivity" />
        <activity android:name=".GarbgeActivity.RecycleGarbgeActivity" />
        <activity android:name=".GarbgeActivity.YifuGarbgeActivity" />
        <activity android:name=".GarbgeActivity.QitaGarbgeActivity" />
        <activity android:name=".FlashActivity"> <!-- 设置等待界面为进入的程序的第一个界面 -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>